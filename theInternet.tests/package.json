{
  "name": "internetapp.testing",
  "version": "1.0.0",
  "description": "testing https://the-internet.herokuapp.com/ with selenium-webdriver & jest",
  "main": "internet.test.js",
  "scripts": {
    "test": "jest internet.test.js",
    "test:auth": "npm run test -- -t '#auth'",
    "test:download": "npm run test -- -t '#download'",
    "test:debug": "node --inspect node_modules/.bin/jest --watch --runInBand internet.test.js",
    "test:watch": "jest --watch --runInBand",
    "sendReport": "node nodemailer.js"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "theInternetApp Test Report",
          "outputPath": "reports/index.html",
          "includeFailureMsg": true,
          "openReport": true
        }
      ]
    ]
  },
  "keywords": [
    "selenium",
    "theInternetApp",
    "chromedriver"
  ],
  "author": "Goodwin",
  "license": "MIT",
  "dependencies": {
    "@wdio/cli": "^7.2.3",
    "chai": "^4.3.4",
    "chromedriver": "^89.0.0",
    "dotenv": "^8.2.0",
    "jest-environment-selenium": "^2.1.2",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "selenium": "^2.20.0",
    "selenium-webdriver": "^4.0.0-beta.2",
    "webdriver-manager": "^12.1.8"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "jest-html-reporter": "^3.3.0",
    "nodemailer": "^6.5.0"
  }
}
